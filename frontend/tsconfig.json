// frontend/tsconfig.json
{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react-jsx",
      "outDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  